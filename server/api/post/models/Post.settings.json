{
  "connection": "default",
  "collectionName": "post",
  "info": {
    "name": "post",
    "description": "设计师发布文章"
  },
  "options": {
    "timestamps": [
      "createdAt",
      "updatedAt"
    ]
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "article": {
      "required": true,
      "type": "text"
    },
    "copyright": {
      "required": true,
      "enum": [
        "Original",
        "Reprint"
      ],
      "type": "enumeration"
    },
    "author": {
      "columnName": "author",
      "model": "user",
      "via": "posts",
      "plugin": "users-permissions"
    }
  }
}